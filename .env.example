# Application Configuration
APP_NAME=Keerja Backend
APP_ENV=development
APP_PORT=8080
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=bekerja
DB_PASSWORD=your_password_here
DB_NAME=keerja_db
DB_SSLMODE=disable
DB_TIMEZONE=Asia/Jakarta

# Database Pool Configuration
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# JWT Configuration (untuk minggu selanjutnya)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_DAYS=7

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/google/callback

# Email Configuration (SMTP)
# For production (Gmail, SendGrid, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# For development (MailHog - email testing tool)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@keerja.com
SMTP_FROM_NAME=Keerja

# Note: MailHog runs on port 1025 for SMTP and port 8025 for Web UI
# Start MailHog: docker run -d -p 1025:1025 -p 8025:8025 mailhog/mailhog
# Web UI: http://localhost:8025

# Storage Configuration
STORAGE_PROVIDER=local
UPLOAD_PATH=./uploads
AWS_REGION=ap-southeast-1
AWS_BUCKET=keerja-uploads
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
CLOUDINARY_URL=cloudinary://your-cloudinary-url

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Frontend URLs (for email links)
FRONTEND_URL=http://localhost:3000
VERIFY_EMAIL_URL=http://localhost:3000/verify-email
RESET_PASSWORD_URL=http://localhost:3000/reset-password
DASHBOARD_URL=http://localhost:3000/dashboard

# Support Configuration
SUPPORT_EMAIL=support@keerja.com
