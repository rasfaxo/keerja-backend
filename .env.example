# Application Configuration
APP_NAME=Keerja Backend
APP_ENV=development
APP_PORT=8080
APP_VERSION=1.0.0

# Database Configuration (Local Development)
POSTGRES_PASSWORD=postgres_admin_pass
DB_PASSWORD=bekerja_dev_pass_123
DATABASE_URL=postgresql://bekerja:bekerja_dev_pass_123@localhost:5434/keerja?sslmode=disable

# Database Roles (Docker)
DB_MIGRATOR_PASSWORD=kustan_dev_pass_123
DB_APP_PASSWORD=bekerja_dev_pass_123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Mail Configuration (MailHog)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM=noreply@keerja.local

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false

# MinIO Root Credentials (Docker)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Timezone
TZ=Asia/Jakarta

# JWT Configuration
JWT_SECRET=keerja_jwt_secret_key_minimum_32_characters_long_for_security
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_DAYS=7

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# JWT Configuration (untuk minggu selanjutnya)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_DAYS=7

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/google/callback
GOOGLE_CREDENTIALS_FILE=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Allowed mobile redirect URIs for OAuth (comma-separated)
# Example: myapp://oauth-callback,myapp://production-callback
ALLOWED_MOBILE_REDIRECT_URIS=

# Storage Configuration
FRONTEND_URL=http://localhost:3000
VERIFY_EMAIL_URL=http://localhost:3000/verify-email
RESET_PASSWORD_URL=http://localhost:3000/reset-password
DASHBOARD_URL=http://localhost:3000/dashboard

# Support Configuration
SUPPORT_EMAIL=support@keerja.com

# Firebase Cloud Messaging (FCM) Configuration
FCM_ENABLED=true
FCM_PROJECT_ID=your-firebase-project-id
FCM_CREDENTIALS_FILE=./config/firebase-service-account.json
FCM_TIMEOUT=30s
FCM_BATCH_SIZE=500
FCM_MAX_RETRIES=3
PUSH_DEFAULT_SOUND=default
PUSH_DEFAULT_TTL=86400
